<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgrounds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="638dp"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:id="@+id/overview_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:textSize="28sp"
                android:typeface= "sans"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#808080"
                android:shadowDx="5"
                android:shadowDy="7"
                android:shadowRadius="6"
                android:text="@string/overview_title"
                />
            <TextView
                android:id="@+id/instructions_overview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:typeface= "sans"
                android:textStyle="normal"
                android:text="@string/overview"
                />
            <TextView
                android:textAlignment="center"
                android:id="@+id/objective_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:textSize="28sp"
                android:typeface= "sans"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#808080"
                android:shadowDx="5"
                android:shadowDy="7"
                android:shadowRadius="6"
                android:text="@string/objective_title"
                />
            <TextView
                android:id="@+id/instructions_objective"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:typeface= "sans"
                android:layout_margin="16dp"
                android:text="@string/objective"
                />
            <TextView
                android:textAlignment="center"
                android:id="@+id/game_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:textSize="28sp"
                android:typeface= "sans"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:shadowColor="#808080"
                android:shadowDx="5"
                android:shadowDy="7"
                android:shadowRadius="6"
                android:text="@string/game_title"
                />
            <TextView
                android:id="@+id/instructions_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:typeface= "sans"
                android:layout_margin="16dp"
                android:text="@string/game"
                />
            <TextView
                android:id="@+id/instructions_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:typeface= "sans"
                android:layout_margin="16dp"
                android:text="@string/value"
                />
            <TextView
                android:id="@+id/instructions_lives"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:typeface= "sans"
                android:layout_margin="16dp"
                android:text="@string/lives"
                />
            <ImageView
                android:layout_width="400dp"
                android:layout_height="220dp"
                android:src="@drawable/main" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="474dp" />

</LinearLayout>
